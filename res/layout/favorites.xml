<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/actionbar1"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#ED1C24"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/b1"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_toLeftOf="@+id/tv1"
            android:src="#ffffffff"
            android:text="@string/hello" />

        <ImageView
            android:id="@+id/b1"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_toRightOf="@+id/tv1"
            android:src="#ffffffff"
            android:text="@string/hello" />

        <!-- <ImageView -->
        <!-- android:id="@+id/refresh" -->
        <!-- android:layout_width="25dip" -->
        <!-- android:layout_height="25dip" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- android:layout_marginLeft="20dp" -->
        <!-- android:layout_marginRight="20dp" -->
        <!-- android:scaleType="fitXY" -->
        <!-- android:src="@drawable/refresh_selector" -->
        <!-- android:text="@string/hello" /> -->

        <ProgressBar
            android:id="@+id/prograssbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/refresh"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="Favorites"
            android:textColor="#ffffff"
            android:textSize="7pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imview1"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="#ffffffff"
            android:text="@string/hello" />

        <ImageView
            android:id="@+id/imview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/tv1"
            android:src="@drawable/train2" />

        <ImageView
            android:id="@+id/imview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/tv1"
            android:src="@drawable/bus" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mylist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/actionbar1" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Map To My Favorties"
            android:textColor="#ED1C24"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/mylist"
        android:orientation="vertical" >


    </RelativeLayout>

</RelativeLayout>