<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#ED1C24"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bordertwo"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_toLeftOf="@+id/textView1"
            android:src="#ffffffff"
            android:text="@string/hello" />

        <ImageView
            android:id="@+id/borderthree"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_toRightOf="@+id/textView1"
            android:src="#ffffffff"
            android:text="@string/hello" />

        <!-- <ImageView -->
        <!-- android:id="@+id/refresh" -->
        <!-- android:layout_width="25dip" -->
        <!-- android:layout_height="25dip" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- android:layout_marginLeft="20dp" -->
        <!-- android:layout_marginRight="20dp" -->
        <!-- android:scaleType="fitXY" -->
        <!-- android:src="@drawable/refresh_selector" -->
        <!-- android:text="@string/hello" /> -->

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/refresh"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="UTA Spy"
            android:textColor="#ffffff"
            android:textSize="7pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="#ffffffff"
            android:text="@string/hello" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/textView1"
            android:src="@drawable/train2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/textView1"
            android:src="@drawable/bus" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/actionbar"
        android:background="@drawable/home_bg" >

        <!-- <FrameLayout -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="fill_parent" > -->


        <!-- <ImageView -->
        <!-- android:id="@+id/imageView1" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:src="@drawable/home" /> -->


        <!-- </FrameLayout> -->

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#ED1C24" >
        </RelativeLayout>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="150dip"
            android:background="@drawable/favorites_chooser" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="100dip"
            android:layout_height="120dip"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/imageButton2"
            android:background="@drawable/nearby_selector" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton1"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/imageButton2"
            android:background="@drawable/about_chooser" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageButton3"
            android:background="@drawable/settings_chooser" />

    </RelativeLayout>

</RelativeLayout>